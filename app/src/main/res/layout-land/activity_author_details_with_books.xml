<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AuthorDetailedView">


    <EditText
        android:id="@+id/authorFirstName"
        android:layout_width="276dp"
        android:layout_height="54dp"
        android:layout_marginEnd="7dp"
        android:hint="Author First Name"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/bookTitle"
        app:layout_constraintEnd_toStartOf="@+id/authorLastName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/authorFirstNameText"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="7dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:text="Author First Name"
        app:layout_constraintBottom_toTopOf="@+id/authorLastName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/authorFirstName"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/authorLastName"
        android:layout_width="276dp"
        android:layout_height="53dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="1dp"
        android:hint="Author Last Name"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/bookTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/authorFirstName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/authorLastNameText"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="14dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:text="Author Last Name"
        app:layout_constraintBottom_toTopOf="@+id/bookTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/authorLastName"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/bookTitle"
        android:layout_width="524dp"
        android:layout_height="71dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="List of Books Associated with this author. Click on the book to edit.\nClick the \+ button to add more books."
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/bookRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/authorFirstName" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bookRecyclerView"
        android:layout_width="733dp"
        android:layout_height="163dp"
        android:layout_marginTop="8dp"
        android:padding="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookTitle"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/enterBookDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="51dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="16dp"
        android:text="Add Book"
        app:layout_constraintBottom_toTopOf="@+id/bookRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bookTitle"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>