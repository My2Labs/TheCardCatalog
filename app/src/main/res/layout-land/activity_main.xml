<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <Button
        android:id="@+id/library_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Enter Library"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.744"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/book_fair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="See upcoming book fairs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="407dp"
        android:layout_height="208dp"
        android:background="@drawable/gradient_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="36dp"
        android:paddingBottom="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.873"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0">

        <!-- Book 1 -->
        <FrameLayout
            android:layout_width="31dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="@drawable/book_spine_gray">
            <!-- Additional details like text can be added here -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/bahiana"
                android:rotation="90"
                android:text="Reference"
                android:textSize="10sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- Book 2 -->
        <FrameLayout
            android:layout_width="26dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="@drawable/book_spine_white">
            <!-- Additional details like text can be added here -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:rotation="90"
                android:text=":)"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="31dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="@drawable/book_spine_gray">
            <!-- Additional details like text can be added here -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/engagement"
                android:rotation="90"
                android:text="Trees"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="31dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="@drawable/book_spine_cream">
            <!-- Additional details like text can be added here -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/benchnine_light"
                android:rotation="90"
                android:text="Games"
                android:textSize="14sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="31dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="@drawable/book_spine_wine">
            <!-- Additional details like text can be added here -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/bahiana"
                android:rotation="90"
                android:text="Spa"
                android:textColor="#F6F2F2"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="26dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="@drawable/book_spine_gray">
            <!-- Additional details like text can be added here -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/katibeh"
                android:rotation="90"
                android:text="Dogs"
                android:textSize="16sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="26dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="@drawable/book_spine_white">
            <!-- Additional details like text can be added here -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/bahiana"
                android:rotation="90"
                android:text="Cats"
                android:textSize="16sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="31dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="@drawable/book_spine_gray">
            <!-- Additional details like text can be added here -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:rotation="90"
                android:text="Food"
                android:textSize="12sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="31dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="@drawable/book_spine_cream">
            <!-- Additional details like text can be added here -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:rotation="90"
                android:text="Lake"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="31dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="@drawable/book_spine_wine"
            android:rotation="-5">
            <!-- Additional details like text can be added here -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:rotation="90"
                android:text="Cars"
                android:textColor="#F6F2F2"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="26dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="@drawable/book_spine_white">
            <!-- Additional details like text can be added here -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/katibeh"
                android:rotation="90"
                android:text="Play"
                android:textSize="16sp"
                android:textStyle="bold" />
        </FrameLayout>


        <!-- Repeat for more books -->

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Personal Virtual Library"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.808"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="208dp"
        android:layout_height="201dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="24dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintBottom_toTopOf="@+id/book_fair"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>