<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AuthorDetailedView">


    <EditText
        android:id="@+id/authorFirstName"
        android:layout_width="276dp"
        android:layout_height="54dp"
        android:layout_marginEnd="177dp"
        android:layout_marginBottom="16dp"
        android:hint="Author First Name"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/authorLastName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/authorFirstNameText"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="7dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:text="Author First Name"
        app:layout_constraintBottom_toTopOf="@+id/authorLastName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/authorFirstName"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/authorLastName"
        android:layout_width="276dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="31dp"
        android:hint="Author Last Name"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/bookTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/authorFirstName" />

    <TextView
        android:id="@+id/authorLastNameText"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="14dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:text="Author Last Name"
        app:layout_constraintBottom_toTopOf="@+id/bookTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/authorLastName"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/bookTitle"
        android:layout_width="384dp"
        android:layout_height="87dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="List of Books Associated \nwith this author.\nClick on the book to edit.\nClick the \+ button to add more books."
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/bookRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bookRecyclerView"
        android:layout_width="417dp"
        android:layout_height="332dp"
        android:layout_marginBottom="47dp"
        app:layout_constraintBottom_toTopOf="@+id/enterBookDetails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookTitle"
        tools:ignore="MissingConstraints"
        android:padding="14dp"/>

    <Button
        android:id="@+id/enterBookDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Book"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookRecyclerView" />

</androidx.constraintlayout.widget.ConstraintLayout>